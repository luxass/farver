{
  "name": "farver",
  "version": "0.4.2",
  "description": "A tiny color library",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "homepage": "https://github.com/luxass/farver",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/farver.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/farver/issues"
  },
  "keywords": [
    "color",
    "colour",
    "colors",
    "terminal",
    "console",
    "ansi",
    "tty",
    "support",
    "supports",
    "farver"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./supports": {
      "import": "./dist/supports.js",
      "require": "./dist/supports.cjs"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "playground": "tsx playground.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:bun": "bun test ./test-bun",
    "test:deno": "deno test --allow-env",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "termenv": "^1.0.0-beta.6"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^5.1.1",
    "@types/bun": "^1.2.18",
    "@types/node": "^22.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "playwright": "^1.54.1",
    "publint": "^0.3.12",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "playwright"
    ]
  }
}
