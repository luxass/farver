{
  "name": "farver",
  "version": "0.2.0",
  "description": "A tiny color library",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@9.12.3",
  "license": "MIT",
  "homepage": "https://github.com/luxass/farver",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/farver.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/farver/issues"
  },
  "keywords": [
    "color",
    "colour",
    "colors",
    "terminal",
    "console",
    "ansi",
    "tty",
    "support",
    "supports",
    "farver"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./supports": {
      "import": {
        "types": "./dist/supports.d.ts",
        "default": "./dist/supports.mjs"
      },
      "require": {
        "types": "./dist/supports.d.cts",
        "default": "./dist/supports.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "termenv": "^0.4.0"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.12.1",
    "@types/node": "^18.19.63",
    "eslint": "^9.14.0",
    "eslint-plugin-format": "^0.1.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
