{
  "name": "farver",
  "version": "0.1.0",
  "description": "A tiny color library",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@8.13.1",
  "license": "MIT",
  "homepage": "https://github.com/luxass/farver",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/farver"
  },
  "bugs": {
    "url": "https://github.com/luxass/farver/issues"
  },
  "keywords": [
    "color",
    "colour",
    "colors",
    "terminal",
    "console",
    "ansi",
    "tty",
    "support",
    "supports",
    "farver"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "browser": "./dist/browser/index.mjs",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "browser": "./dist/browser/index.cjs",
        "default": "./dist/index.cjs"
      },
      "browser": "./dist/browser/index.mjs"
    },
    "./supports": {
      "import": {
        "types": "./dist/supports.d.ts",
        "browser": "./dist/browser/supports.browser.mjs",
        "default": "./dist/supports.mjs"
      },
      "require": {
        "types": "./dist/supports.d.cts",
        "browser": "./dist/browser/supports.browser.cjs",
        "default": "./dist/supports.cjs"
      },
      "browser": "./dist/browser/supports.browser.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --report-unused-disable-directives",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.browser.json"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-format": "^0.1.0",
    "jsdom": "^23.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  }
}
